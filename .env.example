# Resolution Bingo - Environment Configuration
# Copy this file to .env.local and fill in your values

# MariaDB Database Connection
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=resolution_bingo

# Password Hashing
# Higher values = more secure but slower (default: 12)
PASSWORD_SALT_ROUNDS=12

# Node Environment
NODE_ENV=development

# SMTP Configuration (SMTP Soho)
# Email service for verification emails
SMTP_HOST=smtp.soho.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@yourdomain.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_NAME=Resolution Bingo
SMTP_FROM_EMAIL=noreply@yourdomain.com

# Application Base URL
# Used for generating verification links in emails
APP_BASE_URL=http://localhost:9002
