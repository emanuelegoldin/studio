# Resolution Bingo - Environment Configuration
# Copy this file to .env and fill in your values

# MariaDB Database Connection
#DB_HOST=host.docker.internal           # When launched from within devcontainer
DB_HOST=localhost                       # When launched from host machine
DB_PORT=3306
DB_USER=your_username
DB_PASSWORD=your_password
DB_ROOT_PASSWORD=your_root_password
DB_NAME=resolution_bingo

# Password Hashing
PASSWORD_SALT_ROUNDS=12

# Next.js Environment
NODE_ENV=development

# SMTP Configuration
SMTP_HOST=smtp.soho.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@yourdomain.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_NAME=Resolution Bingo
SMTP_FROM_EMAIL=noreply@yourdomain.com
APP_BASE_URL=http://localhost:9002      # Used for generating verification links in emails
